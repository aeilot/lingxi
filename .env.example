# OpenAI API Key (required for conversation generation)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo

# Memory Configuration
MAX_SHORT_TERM_MESSAGES=10
SUMMARIZATION_INTERVAL=5  # Turns before summarizing to M_long

# Proactive Agent Configuration
PERSONALITY_UPDATE_THRESHOLD=20
PROACTIVE_TRIGGER_INTERVAL=10  # Turns between proactive engagements
